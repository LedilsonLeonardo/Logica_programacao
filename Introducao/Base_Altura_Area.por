programa {
	funcao inicio() {
	
	real base
	real altura
	real area
	
	escreva ("Calculando a área do triângulo\n\n")
	
	escreva ("Informe a base do triângulo: ")
	leia (base)
	
	escreva ("Informe a altura do triângulo: ")
	leia(altura)
	
	area = (base *  altura )/ 2
	
	escreva ("Área = "+ area + "cm")
	
	
	}
}
